print("___________________________")
print(" ")
tinggi_input = input("Masukkan tinggi segitiga: ")
if tinggi_input.isdigit():
    tinggi = int(tinggi_input)
    if tinggi > 0:
        print(" ")
        for i in range( 1, tinggi + 1):
            for j in range( 1, i + 1):
                print(j, end="")
            print()
    else:
        print("Tinggi segitiga harus merupakan bilangan bulat positif.")
else:
    print("Masukkan harus berupa bilangan bulat.")
print(" ")
print(" Terimakasih")
